{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": ["node", "element-plus/global"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["env.d.ts", "**/*", "**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
