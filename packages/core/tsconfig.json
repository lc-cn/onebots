{
    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": ".",
        "target": "esnext",
        "module": "nodenext",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "nodenext",
        "experimentalDecorators": true,
        "composite": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "skipLibCheck": true
    },
    "include": ["./src/"],
    "exclude": [
        "./src/test.ts",
        "node_modules"
    ]
}
